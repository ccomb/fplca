{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fplca",
  "identifier": "com.fplca.desktop",
  "version": "0.5.0",
  "build": {
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../web/dist"
  },
  "bundle": {
    "active": true,
    "category": "Education",
    "targets": ["appimage", "deb", "msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/fplca*": "./",
      "resources/fplca.toml": "./",
      "resources/web/*": "web/",
      "resources/web/webfonts/*": "web/webfonts/",
      "icons/*": "icons/"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "liblapack3",
          "libblas3",
          "libgfortran5",
          "libgomp1",
          "libquadmath0"
        ]
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "dialogImagePath": "./icons/dialog.bmp",
        "bannerPath": "./icons/banner.bmp"
      },
      "nsis": {
        "sidebarImage": "./icons/nsis-sidebar.bmp",
        "headerImage": "./icons/nsis-header.bmp"
      }
    },
    "shortDescription": "Life Cycle Assessment computation engine",
    "longDescription": "fpLCA is a high-performance Life Cycle Assessment (LCA) computation engine for environmental impact analysis of products and processes."
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "fpLCA - Life Cycle Assessment",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:*; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

