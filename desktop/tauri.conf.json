{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fpLCA",
  "identifier": "com.fplca.desktop",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../web/dist"
  },
  "bundle": {
    "active": true,
    "category": "Education",
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": {
      "resources/lib/*": "lib/",
      "resources/fplca": "./",
      "resources/fplca.toml": "./",
      "resources/web/*": "web/"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    },
    "shortDescription": "Life Cycle Assessment computation engine",
    "longDescription": "fpLCA is a high-performance Life Cycle Assessment (LCA) computation engine for environmental impact analysis of products and processes."
  },
  "app": {
    "windows": [
      {
        "title": "fpLCA - Life Cycle Assessment",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:*; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
